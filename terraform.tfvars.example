# Copy this file to terraform.tfvars and fill in your values
# Or set these as environment variables: export TF_VAR_tenancy_ocid="..."

# Get these from OCI Console
tenancy_ocid       = "ocid1.tenancy.oc1..aaaaaaaa..."
user_ocid          = "ocid1.user.oc1..aaaaaaaa..."
fingerprint        = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path   = "~/.oci/oci_api_key.pem"
compartment_ocid   = "ocid1.compartment.oc1..aaaaaaaa..." # Or use tenancy_ocid
region             = "ap-sydney-1" # Your account's home region

# Get this from: OCI Console -> Compute -> Instances -> Create Instance -> Select AD
availability_domain = "JYNt:AP-SYDNEY-1-AD-1"

# SSH key for accessing instances
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# ARM image OCID - Ubuntu 22.04 ARM for Sydney
arm_image_ocid = "ocid1.image.oc1.ap-sydney-1.aaaaaaaavd6pyh743377ohug5wxn77c2tomo3fh3hslna7dx5ktpk35llt7q"
