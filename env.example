# Oracle Cloud Infrastructure Environment Variables
# Copy this to .env and fill in your values
# Then: source .env
# Or add to your ~/.zshrc or ~/.bashrc

# OCI Authentication
export TF_VAR_tenancy_ocid="ocid1.tenancy.oc1..aaaaaaaxxxxx"
export TF_VAR_user_ocid="ocid1.user.oc1..aaaaaaaxxxxx"
export TF_VAR_fingerprint="xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
export TF_VAR_private_key_path="$HOME/.oci/oci_api_key.pem"

# OCI Configuration
export TF_VAR_region="ap-sydney-1"
export TF_VAR_compartment_ocid="ocid1.tenancy.oc1..aaaaaaaxxxxx"  # or compartment OCID
export TF_VAR_availability_domain="JYNt:AP-SYDNEY-1-AD-1"

# Instance Configuration
export TF_VAR_ssh_public_key_path="$HOME/.ssh/id_rsa.pub"
export TF_VAR_arm_image_ocid="ocid1.image.oc1.ap-sydney-1.aaaaaaaxxxxx"

# Billing Alerts
export TF_VAR_billing_alert_email="your.email@example.com"

# Optional: Set this as your kubeconfig
# export KUBECONFIG="$HOME/.kube/oracle-k3s-config"
