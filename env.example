# Oracle Cloud Infrastructure Environment Variables
# Copy this to .env and fill in your values
# Or run: make setup

# OCI Authentication
TF_VAR_tenancy_ocid=ocid1.tenancy.oc1..aaaaaaaxxxxx
TF_VAR_user_ocid=ocid1.user.oc1..aaaaaaaxxxxx
TF_VAR_fingerprint=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
TF_VAR_private_key_path=~/.oci/oci_api_key.pem

# OCI Configuration
TF_VAR_region=ap-sydney-1
TF_VAR_compartment_ocid=ocid1.tenancy.oc1..aaaaaaaxxxxx
TF_VAR_availability_domain=JYNt:AP-SYDNEY-1-AD-1

# Instance Configuration
TF_VAR_ssh_public_key_path=~/.ssh/id_rsa.pub
TF_VAR_arm_image_ocid=ocid1.image.oc1.ap-sydney-1.aaaaaaaxxxxx

# Billing Alerts
TF_VAR_billing_alert_email=your.email@example.com

# S3-compatible credentials for OCI Object Storage remote state
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-key

# Optional: Set this as your kubeconfig
# KUBECONFIG=~/.kube/oracle-k3s-config
